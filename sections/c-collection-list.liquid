<section class="page-width !py-12">
  <div class="border-b-1 border-gray-300 flex justify-between">
    {% comment %} heading  {% endcomment %}
    <div class="border-b-2 border-blue-500 inline-block">
      <h2 class="!text-[14px] md:!text-[24px] mt-2 ">{{ section.settings.textarea }}</h2>
    </div>

    {% comment %} button {% endcomment %}
    <div class="flex items-center gap-2 hover:text-blue-500 group transition-all duration-150 ">
      <a href="{{section.settings.btn_link}}">
        {{ section.settings.btn_text }}
      </a>
      {% render 'chevron-right' %}
    </div>
  </div>
  <div class="flex justify-around md:justify-between flex-wrap mt-12 gap-6 md:gap-12">
    {% for collection in section.settings.collection_list %}
      {% if collection != blank %}
        <div class=" h-50 w-50 md:w-72 md:h-72 hover:scale-105 transition-all duration-250 flex justify-between items-center border  border-gray-300 rounded-full overflow-hidden">
          <a href="{{collection.url}}"
            ><img
              src="{{ collection.image | image_url}}"
              alt=""
              height=""
              width=""
          ></a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Collection list",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 8
    },
    {
      "type": "textarea",
      "id": "textarea",
      "label": "textarea",
      "default": "Shop From Top Categories"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button text",
      "default": "Follow me"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button link"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Collection list",
      "blocks": []
    }
  ]
}
{% endschema %}
